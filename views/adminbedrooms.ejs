<div class="admin-panel">
    <div class="menu-toggle">
      <div class="hamburger">
        <span></span>
      </div>
    </div>
    <%- include('./partials/sidebar') %>
    <main class="content">
      <div class="table-responsive">
        <table class="my-5 table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Location</th>
              <th>Price</th>
              <th>Type</th>
              <th>Purpose</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% bedrooms.forEach((bedroom) => { %>
            <tr>
              <td><%= bedroom.property_name %></td>
              <td><%= bedroom.property_location %></td>
              <td><%= bedroom.property_price %></td>
              <td><%= bedroom.property_type %></td>
              <td><%= bedroom.property_purpose %></td>
              <td>
                <a
                  href="/admin/editproperty/<%= bedroom.id %>"
                  class="btn btn-secondary"
                  >Edit
                  </a>
              </td>
              <td>
                <form action="/admin/deleteproperty/<%= bedroom.id %>?_method=DELETE" method="post"><button class="btn btn-danger">Delete</button></form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>