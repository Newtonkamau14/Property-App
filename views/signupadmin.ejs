<div class="d-flex align-items-center justify-content-center vh-100">
  <form action="/auth/admin/signup" method="post" class="border rounded p-3 col-4">
    <h3 class="text-center text-primary">Create Account</h3>
    <div class="form-group my-4">
      <label for="username">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        placeholder="Enter username"
      />
    </div>
    <div class="form-group my-4">
      <label for="emailaddress">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter email"
        required
      />
    </div>
    <div class="form-group my-4">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
      />
    </div>
    <button type="submit" class="btn btn-primary my-2">Sign Up</button>
    <div>
      <p>
        Already have an account.
        <a href="/auth/admin/login" class="primary">Click here</a>
      </p>
    </div>
  </form>
</div>