<div class="admin-panel">
  <div class="menu-toggle">
    <div class="hamburger">
      <span></span>
    </div>
  </div>

  <%- include('./partials/sidebar') %>
  <main class="content">
    <h1>Dashboard</h1>
    <form class="d-flex my-2">
      <input class="form-control me-2" type="search" placeholder="Search Property" aria-label="Search" name="search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    <h3 class="text-primary text-center">
      All Properties
    </h3>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Price</th>
            <th>Type</th>
            <th>Purpose</th>
          </tr>
        </thead>
        <!--Get all properties-->
        <% properties.forEach((property) => { %>
          <tbody>
            <tr>
              <td><%= property.property_name %></td>
              <td><%= property.property_location %></td>
              <td><%= property.property_price.toLocaleString("en-UK") %></td>
              <td><%= property.property_type %></td>
              <td><%= property.property_purpose %></td>
            </tr>
          </tbody>
        <% }) %>
      </table>
    </div>
  </main>
</div>
